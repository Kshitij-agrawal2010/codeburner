<div class="panel panel-default">
  <div class="panel-heading">E-mail</div>
  <div class="panel-body">
    <div id="category" data-id="email">
      <fieldset>
        <legend>General</legend>
        <div class="form-group">
          <input type="TEXT" class="input-setting form-control floating-label" placeholder="From Address" name="from" data-id="from" value="<%= _.escape(settings.from) %>">
        </div>
      </fieldset>
      <br><br>
      <fieldset>
        <legend>Link Host (Rails.env)</legend>
        <span data-id="link_host">
          <div class="form-group">
            <input type="TEXT" class="input-setting form-control floating-label" placeholder="Production" name="production" data-id="production" value="<%= settings.link_host.production %>">
          </div>
          <div class="form-group">
            <input type="TEXT" class="input-setting form-control floating-label" placeholder="Staging" name="staging" data-id="staging" value="<%= settings.link_host.staging %>">
          </div>
          <div class="form-group">
            <input type="TEXT" class="input-setting form-control floating-label" placeholder="Development" name="development" data-id="development" value="<%= settings.link_host.development %>">
          </div>
          <div class="form-group">
            <input type="TEXT" class="input-setting form-control floating-label" placeholder="Test" name="test" data-id="test" value="<%= settings.link_host.test %>">
          </div>
        </span>
      </fieldset>
      <button class="btn btn-primary pull-right" id="settings-submit">Update E-mail Settings</button>
    </div>
  </div>
</div>
