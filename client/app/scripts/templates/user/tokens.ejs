<div class="modal fade" id="token-dialog" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <center><h4 class="modal-title" id="generate-title">Generate an API Token</h4></center><p>
      </div>
      <form>
        <div class="modal-body" id="generate-body">
          <div class="form-group label-floating">
            <label for="token-name" class="control-label">Name (required, unique)</label>
            <input type="text" id="token-name" class="form-control">
            <span class="help-block">Enter a uniquely identifying name for your new API token</span>
          </div>
          <br>
          <center>
            <button class="btn btn-default btn-flat" data-dismiss="modal" id="generate-cancel-btn"><i class="octicon octicon-x"></i> Cancel</button>
            <button class="btn btn-primary btn-flat" data-dismiss="modal" id="generate-token-confirm"><i class="octicon octicon-check"></i> Generate</button>
          </center>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">API Tokens</div>
  <div class="panel-body">
    <% tokens.forEach(function(token) { %>
      <%= token.name %> - <%= token.token %>
    <% }) %>
    <br>
    <button id="generate-token" class="btn btn-primary pull-right">Generate Token</button>
  </div>
</div>
